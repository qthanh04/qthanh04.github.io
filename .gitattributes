# Exclude Jekyll template files from language detection
_scripts/*.js linguist-generated=true
*.liquid.js linguist-generated=true

# Properly identify minified files
*.min.js linguist-generated=true

# Exclude third-party libraries from language stats
assets/js/search/** linguist-vendored=true
assets/js/distillpub/** linguist-vendored=true
assets/js/bootstrap.* linguist-vendored=true
assets/js/bootstrap-toc.* linguist-vendored=true

# Exclude Ruby files from CodeQL analysis (mark as vendored)
_plugins/*.rb linguist-vendored=true
Gemfile linguist-vendored=true
Gemfile.lock linguist-vendored=true

# Jekyll specific files
_sass/** linguist-language=SCSS
*.liquid linguist-language=Liquid